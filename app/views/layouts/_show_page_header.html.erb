<div class="page-header">
  <h1><%= title %></h1>
  <div class="btn-group">
    <%= link_to "Edit", edit_path, class: 'btn btn-mini' %>
    <%= link_to "View All", index_path, class: 'btn btn-mini' %>
    <%= link_to "Create New", new_path, class: 'btn btn-mini' %>
    <%= link_to "Delete", model, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete this #{model.to_s.titleize}?" } %>
  </div>
</div>
