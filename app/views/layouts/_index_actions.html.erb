<div class="btn-group">
  <button type="button" class="btn btn-xs btn-danger dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <%= link_to 'Edit', edit_path, class: 'btn btn-xs btn-default btn-block' %>
    <%= link_to 'Delete', object, method: :delete, class: 'btn btn-xs btn-danger btn-block', data: { confirm: "Are you sure you want to delete this object?" } %>
  </ul>
</div>
