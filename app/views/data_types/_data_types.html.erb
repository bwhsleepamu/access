<%= render partial: 'contour/layouts/per_page', locals: { type: 'data_types', per_page: 20 } %>

<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th><%== sort_field_helper(@order, 'data_types.name', 'Name') %></th>
      <th><%== sort_field_helper(@order, 'data_types.storage', 'Storage') %></th>
      <th><%== sort_field_helper(@order, 'data_types.range', 'Range') %></th>
      <th><%== sort_field_helper(@order, 'data_types.length', 'Length') %></th>
      <th><%== sort_field_helper(@order, 'data_types.values', 'Values') %></th>
      <th><%== sort_field_helper(@order, 'data_types.multiple', 'Multiple') %></th>
      <th><%== sort_field_helper(@order, 'data_types.deleted', 'Deleted') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @data_types.each do |data_type| %>
    <tr>
      <td><%= data_type.name %></td>
      <td><%= data_type.storage %></td>
      <td><%= data_type.range %></td>
      <td><%= data_type.length %></td>
      <td><%= data_type.values %></td>
      <td><%= data_type.multiple %></td>
      <td><%= data_type.deleted %></td>
      <td>
        <%= link_to 'Edit', edit_data_type_path(data_type), class: 'btn btn-mini' %>
        <%= link_to 'Delete', data_type, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete Data Type #{data_type.name}?" } %>
      </td>
    </tr>
  <% end %>
</table>

<center><%= paginate @data_types %></center>
