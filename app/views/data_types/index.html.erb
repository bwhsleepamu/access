<% @title = 'Data Types' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Data Type", new_data_type_path, class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag data_types_path, method: :get, remote: true, id: "data_types_search", class: 'form-search', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="data_types"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#data_types_search").attr("action"), $("#data_types_search").serialize(), null, "script");
  });
<% end %>
