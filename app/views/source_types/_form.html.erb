<div class="page-header">
  <h1><%= @title %></h1>
</div>

<div id='source_type_form'>
  <%= form_for @source_type, html: {role: 'form'} do |f| %>
    <%= display_errors @source_type %>

    <div class="form-group">
      <%= f.label :name, nil, class: 'control-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description, nil, class: 'control-label' %>
      <%= f.text_area :description, rows: 7, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= cancel %>
    </div>

  <% end %>

</div>
