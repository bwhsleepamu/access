<div class="page-header">
  <h1><%= @title %></h1>
</div>

<div id='source_type_form'>
  <%= form_for @source_type, html: {role: 'form'} do |f| %>
    <%= display_errors @source_type %>

    <div class="form-group">
      <%= f.label :name, nil, class: 'control-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :file_pattern, nil, class: 'control-label' %>
      <%= f.text_field :file_pattern, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :documentation_id, nil, class: 'control-label' %>
      <%= f.select :documentation_id, [['---', nil]] + Documentation.current.collect{|d| [d.display_name, d.id]}, {}, {rel: :chosen, class: 'form-control',  data: {placeholder: "Select documentation"}} %>
    </div>

    <div class="form-group">
      <%= f.label :description, nil, class: 'control-label' %>
      <%= f.text_area :description, rows: 7, class: 'form-control description md' %>
    </div>

    <div class="form-actions">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= cancel %>
    </div>

  <% end %>

</div>
