<% @title = "Report for #{params[:name]}" %>
<div class="page-header">
  <h1>
    <%= @title %>
  </h1>
</div>

<pre><%= @report.to_a[0] %></pre>

<div id="report">
  <table class="table table-bordered table-condensed table-striped datatable">
    <thead>
    <tr>
      <% @report.columns.each do |colname| %>
        <th><%= colname %></th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% @report.each do |r| %>
      <tr>
        <% r.values.each do |value|%>
          <td><%= value %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
