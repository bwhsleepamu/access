<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @data_dictionary, html: { role: 'form', id: "data_dictionary", data: {data_dictionary_id: @data_dictionary.id, form_path: data_attribute_form_data_dictionary_index_path}  } do |f| %>
    <%= display_errors @data_dictionary %>
    <div class="row">

      <div class="col-md-6">
        <fieldset>
          <legend>Main Information</legend>

          <div class="form-group">
            <%= f.label :title, nil, class: 'control-label' %>
            <%= f.text_field :title, class: 'form-control   ' %>
          </div>

          <div class="form-group">
            <%= f.label :description, nil, class: 'control-label' %>
            <%= f.text_area :description, rows: 7, class: 'form-control description' %>
          </div>
        </fieldset>
      </div>
      <div class="col-md-6">
        <fieldset>
          <legend>Data Attributes</legend>
          <div class="form-group">
            <%= f.label :data_type_id, nil, class: 'control-label' %>
            <%= f.select :data_type_id, [['---', nil]] + DataType.current.collect{|d| [d.name, d.id]}, {}, {rel: :chosen, class: 'form-control', data: {placeholder: "Select the data type of this variable..."}} %>
          </div>
          <div id="data_attributes"></div>
        </fieldset>
      </div>
    </div>
    <div class="form-actions">
        <%= f.submit "Create Data Dictionary entry", class: 'btn btn-primary' %>
        <%= cancel %>
    </div>
<% end %>
