<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th><%= sort_field_helper(params[:order], 'title', 'Title', 'data_dictionary_search') %></th>
      <th><%= sort_field_helper(params[:order], 'description', 'Description', 'data_dictionary_search') %></th>
      <th>Data Type</th>
      <th><%= sort_field_helper(params[:order], 'min_value', 'Min Value', 'data_dictionary_search') %></th>
      <th><%= sort_field_helper(params[:order], 'max_value', 'Max Value', 'data_dictionary_search') %></th>
      <th><%= sort_field_helper(params[:order], 'multivalue', 'Multivalue', 'data_dictionary_search') %></th>
      <th><%= sort_field_helper(params[:order], 'min_length', 'Min Length', 'data_dictionary_search') %></th>
      <th><%= sort_field_helper(params[:order], 'max_length', 'Max Length', 'data_dictionary_search') %></th>
      <th><%= sort_field_helper(params[:order], 'unit', 'Unit', 'data_dictionary_search') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @data_dictionary.each do |data_dictionary| %>
    <tr>
      <td><%= link_to data_dictionary.title, data_dictionary %></td>
      <td><%= data_dictionary.description %></td>
      <td><%= link_to data_dictionary.data_type.name, data_dictionary.data_type if data_dictionary.data_type %></td>
      <td><%= data_dictionary.min_value %></td>
      <td><%= data_dictionary.max_value %></td>
      <td><%= data_dictionary.multivalue %></td>
      <td><%= data_dictionary.min_length %></td>
      <td><%= data_dictionary.max_length %></td>
      <td><%= data_dictionary.unit %></td>
      <td>
        <div class="btn-group">
          <%= link_to 'Edit', edit_data_dictionary_path(data_dictionary), class: 'btn btn-mini' %>
          <%= link_to 'Delete', data_dictionary, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete Data Dictionary #{data_dictionary.title}?" } %>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<div class="center"><%= paginate @data_dictionary, theme: 'contour' %></div>
