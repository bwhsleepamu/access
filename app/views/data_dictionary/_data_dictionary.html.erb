<p class='text-info object-info'><%= page_entries_info @data_dictionary %></p>
<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th><%= sort_field_helper(params[:order], 'title', 'Title') %></th>
      <th><%= sort_field_helper(params[:order], 'description', 'Description') %></th>
      <th>Data Type</th>
      <th><%= sort_field_helper(params[:order], 'unit', 'Unit') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @data_dictionary.each do |data_dictionary| %>
    <tr>
      <td><%= link_to data_dictionary.title, data_dictionary %></td>
      <td><%= truncate(data_dictionary.description, length: 100) %></td>
      <td><%= link_to data_dictionary.data_type.name, data_dictionary.data_type if data_dictionary.data_type %></td>
      <td><%= data_dictionary.unit %></td>
      <td>
        <%= render partial: "layouts/index_actions", locals: {object: data_dictionary, edit_path: edit_data_dictionary_path(data_dictionary) } %>
      </td>
    </tr>
  <% end %>
</table>

<div class="center"><%= paginate @data_dictionary, theme: 'contour' %></div>
