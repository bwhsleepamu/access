<p class='text-info object-info'><%= page_entries_info @documentations %></p>
<table class="table table-striped table-bordered" id='documentations'>
  <thead>
  <tr>
    <th><%= sort_field_helper(params[:order], 'title', 'Title') %></th>
    <th><%= sort_field_helper(params[:order], 'author', 'Author') %></th>
    <th>Supported Docs</th>
    <th>Supporting Docs</th>
    <th>Links</th>
    <th><%= sort_field_helper(params[:order], 'created_at', 'Created') %></th>
    <th><%= sort_field_helper(params[:order], 'updated_at', 'Updated') %></th>

    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
    <% @documentations.each do |documentation| %>
      <tr>
        <td><%= link_to documentation.title, documentation %></td>
        <td><%= documentation.author %></td>
        <td><%= documentation.supported_documentations.length %></td>
        <td><%= documentation.supporting_documentations.length %></td>
        <td><%= documentation.documentation_links.length %></td>
        <td><%= simple_date(documentation.created_at) %></td>
        <td><%= simple_date(documentation.updated_at) %></td>
        <td>
          <%= render partial: 'layouts/index_actions', locals: {object: documentation, edit_path: edit_documentation_path(documentation)} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="center navigation"><%= paginate @documentations, theme: 'contour' %></div>
