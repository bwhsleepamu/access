<fieldset class="documentation-links">
  <div class='row'>
    <div class="col-md-3">
      <%= f.label :title, nil, class: 'sr-only' %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
    </div>

    <div class="col-md-7">
      <%= f.label :path, nil, class: 'sr-only' %>
      <%= f.text_field :path , class: 'form-control', placeholder: 'Path' %>
    </div>

    <%= f.hidden_field :_destroy %>

    <div class='col-md-2'>
      <button type="button" class="btn btn-danger btn-block remove-link center-block">
       remove
      </button>
    </div>
  </div>
</fieldset>
