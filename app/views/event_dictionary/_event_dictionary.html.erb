<p class='text-info object-info'><%= page_entries_info @event_dictionary %></p>
<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th><%= sort_field_helper(params[:order], 'name', 'Name') %></th>
      <th>Data Records</th>
      <th><%= sort_field_helper(params[:order], 'description', 'Description') %></th>
      <th><%= sort_field_helper(params[:order], 'created_at', 'Created') %></th>
      <th><%= sort_field_helper(params[:order], 'updated_at', 'Updated') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @event_dictionary.each do |event_dictionary| %>
    <tr>
      <td><%= link_to event_dictionary.name, event_dictionary %></td>
      <td><%= event_dictionary.data_dictionary.map(&:title).length %></td>
      <td><%= event_dictionary.description %></td>
      <td><%= simple_date(event_dictionary.created_at) %></td>
      <td><%= simple_date(event_dictionary.updated_at) %></td>
      <td>
        <%= render partial: 'layouts/index_actions', locals: {object: event_dictionary, edit_path: edit_event_dictionary_path(event_dictionary) } %>
      </td>
    </tr>
  <% end %>
</table>

<div class="center"><%= paginate @event_dictionary %></div>
